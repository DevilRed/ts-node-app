{
  "name": "node-ts-app",
  "version": "1.0.0",
  "description": "",
  "main": "./dist/index.js",
  "scripts": {
    "clean": "rm -rf dist",
    "tsc": "tsc",
    "lint": "tslint -c tslint.json -p tsconfig.json --fix",
    "copy-assets": "ts-node ./tools/copyAssets",
    "dev": "ts-node-dev --respawn --transpileOnly ./src/index.ts",
    "prod": "npm run clean && npm run lint && npm run tsc && npm run copy-assets && node ./dist/index.js ",
    "test": "jest --verbose"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/connect-flash": "0.0.35",
    "@types/cors": "^2.8.6",
    "@types/express-handlebars": "0.0.33",
    "@types/express-session": "^1.15.14",
    "@types/mongoose": "^5.5.13",
    "@types/uuid": "^3.4.5",
    "bcryptjs": "^2.4.3",
    "connect-flash": "^0.1.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-handlebars": "^3.1.0",
    "express-session": "^1.16.2",
    "mongoose": "^5.6.10",
    "multer": "^1.4.2",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "typescript": "^3.5.3",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.1",
    "@types/jest": "^24.0.18",
    "@types/multer": "^1.3.9",
    "@types/passport-local": "^1.0.33",
    "@types/shelljs": "^0.8.5",
    "dotenv": "^8.1.0",
    "jest": "^24.9.0",
    "shelljs": "^0.8.3",
    "ts-jest": "^24.0.2",
    "ts-node-dev": "^1.0.0-pre.41",
    "tslint": "^5.19.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testMatch": [
      "**/__tests__/**/*.ts?(x)",
      "**/?(*.)+(spec|test).ts?(x)"
    ],
    "moduleNameMapper": {
      "^.+\\.(css|less|scss)$": "identity-obj-proxy",
      "@(.*)$": "<rootDir>/src/$1/"
    },
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "transform": {
      "^.+\\.ts?$": "ts-jest",
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "transformIgnorePatterns": []
  }
}
