<div class="col-md-5 mx-auto">
  <div class="card card-body">
    <h2 class="lead">{{ title }}</h2>
    <form action="/books/edit/{{book.id}}" method="POST">
      <div class="form-group">
        <input class="form-control" type="text" name="title" id="title" value="{{ book.title }}" placeholder="Book title">
      </div>
      <div class="form-group">
        <input class="form-control" type="text" name="author" id="author" value="{{ book.author }}" placeholder="Book author">
      </div>
      <div class="form-group">
        <input class="form-control" type="text" name="isbn" id="isbn" value="{{ book.isbn }}" placeholder="Book isbn">
      </div>
      <div class="form-group">
        <button class="btn btn-primary btn-block" type="submit">Edit Book</button>
      </div>
    </form>
  </div>
</div>
