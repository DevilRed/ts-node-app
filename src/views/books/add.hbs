<div class="col-md-5 mx-auto">
  <div class="card card-body">
    <h2 class="">{{ title }}</h2>
    <form action="/books/add" method="POST">
      <div class="form-group">
        <input type="text" name="title" id="title" class="form-control" placeholder="Book Title" autofocus required>
      </div>
      <div class="form-group">
        <input type="text" name="author" id="author" class="form-control" placeholder="Author" required>
      </div>
      <div class="form-group">
        <input type="text" name="isbn" id="isbn" class="form-control" placeholder="Isbn" pattern="(?:(?=.{17}$)97[89][ -](?:[0-9]+[ -]){2}[0-9]+[ -][0-9]|97[89][0-9]{10}|(?=.{13}$)(?:[0-9]+[ -]){2}[0-9]+[ -][0-9Xx]|[0-9]{9}[0-9Xx])">
      </div>
      <button class="btn btn-primary btn-block">Save</button>
    </form>
  </div>
</div>
